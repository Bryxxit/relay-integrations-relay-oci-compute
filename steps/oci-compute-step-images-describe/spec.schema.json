{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"aws": {
			"type": "object",
			"description": "A mapping of OCI account configuration.",
			"properties": {
				"connection": {
					"type": "object",
					"x-relay-connectionType": "oci",
					"description": "A Relay OCI connection to use",
					"properties": {
						"accessKeyID": {
							"type": "string",
							"description": "Access Key ID"
						},
						"secretAccessKey": {
							"type": "string",
							"description": "Secret Access Key"
						}
					},
					"required": [
						"accessKeyID",
						"secretAccessKey"
					]
				},
				"region": {
					"type": "string",
					"description": "The OCI region to use (for example, us-west-2)"
				}
			},
			"required": [
				"connection",
				"region"
			]
		}
	},
	"required": [
		"oci"
	],
	"additionalProperties": false
}
